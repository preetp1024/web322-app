<div class="row">
  <aside class="col-md-3">
    <h2>Add Category</h2>
    <p>Enter the category name and click "Add Category" to create a new category.</p>
  </aside>
  <section class="main col-md-9">
    <form method="post" action="/categories/add">
      <fieldset>
        <legend>Category Details</legend>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="category">Category:</label>
              <input class="form-control" id="category" name="category" type="text" autofocus />
            </div>
          </div>
        </div>
      </fieldset>
      <hr />
      <input
        type="submit"
        class="btn btn-primary pull-right"
        value="Add Category"
      /><br /><br /><br />
    </form>
  </section>
</div>
