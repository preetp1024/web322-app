<!-- items.hbs -->

<div class="row">
  <div class="col-md-12">
    <h2>Items</h2>
    <hr />

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Item ID</th>
            <th>Item Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <td>
                <a href="/item/{{id}}">
                  {{id}}
                </a>
              </td>
              <td>
                <a href="/item/{{id}}">
                  {{title}}
                </a>
              </td>
              <td>
                <a href="/items/delete/{{id}}" class="btn btn-danger">remove</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    {{#unless items}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/unless}}
  </div>
</div>
